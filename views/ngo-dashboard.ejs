        <div class="col-sm-8 col-md-9 col-lg-10" id="volunteers">
            <div class="col-sm-12">
                <form class="search-container">
                    <input type="text" id="search-bar" placeholder="SEARCH">
                    <a href="#"><img class="search-icon" src="../images/search.png"></a>
                </form>
            </div>
            <!--Volunteers colomn-->
            <% if (volunteers.length > 0) { %>
            <% volunteers.forEach(volunteer => { %>
            <div class="col-sm-12 col-md-6 col-lg-4 card-text">
                <a href="/<%= user.ngo_name %>/<%= volunteer.name %>">
                    <div class="card-view">
                        <img src="../images/female_profile.png" alt="" class="profile-img" />
                        <h4 class="text-center text1"><%= volunteer.name %> </h4>
                        <h6 class="text-center text2"><%= volunteer.state %> </h6>
                        <hr>
                        <p class="text-center">
                            <strong>Duration: </strong><%= volunteer.stay_number %> <%= volunteer.stay_duration %>
                        </p>
                    </div>
                </a>
            </div>
            <% }) %>
            <br>
            <div class="col-sm-12 clo-md-12 col-lg-12">
                <button class="profile-btn">More volunteers</button>
            </div>
            <% } else { %>
            <div class="col-sm-12 clo-md-12 col-lg-12">
                <h4 class="text-center text1">No volunteers yet.</h4>
            </div>
            <% } %>

        </div>
        <div class="col-sm-8 col-md-9 col-lg-10 hide" id="activities">
            <!--Activity column-->
            <div>
                <form method="POST" action="/org/dashboard">
                    <br>
                    <label class="text6">Your Mission</label><br><br>
                    <textarea name="mission_statement" class="form-control form-text" cols="100"
                        rows="10"><%= user.mission_statement %></textarea><br><br>
                    <label class="text6">Terms and Condition</label><br>
                    <textarea name="terms_and_condition" class="form-control form-text" cols="100"
                        rows="10"><%= user.terms_and_condition %></textarea>

                    <div class="col-sm-12 clo-md-12 col-lg-12">
                        <button type="submit" class="profile-btn">SAVE</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-sm-8 col-md-9 col-lg-10 hide" id="basic-info">
            <!--Basic info column-->
            <h1 class="text5">BASIC INFORMATION</h1>
            <div class="card-view-4 row">
                <img src="../images/pic1.jpg" class="cover-img">
                <button class="change-btn">Change Cover Picture</button>
                <div>
                    <form method="POST" action="/org/dashboard">
                        <div>
                            <div class="col-md-6">
                                <label class="text6">Name of NGO</label><br>
                                <input type="text" class="form-control form-text" name="ngo_name"
                                    value="<%= user.ngo_name %>">
                            </div>
                            <div class="col-md-6">
                                <label class="text6">Website or Facebook Page</label><br>
                                <input type="text" class="form-control form-text" name="link" value="<%= user.link %>">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="text6">State</label><br>
                            <select class="form-control form-text" name="state">
                                <option><%= user.state %></option>
                                <option>Abia</option>
                                <option>Adamawa</option>
                                <option>Akwa Ibom</option>
                                <option>Anambra</option>
                                <option>Bauchi</option>
                                <option>Bayelsa</option>
                                <option>Benue</option>
                                <option>Borno</option>
                                <option>Cross River</option>
                                <option>Delta</option>
                                <option>Ebonyi</option>
                                <option>Edo</option>
                                <option>Ekiti</option>
                                <option>Enugu</option>
                                <option>Federal Capital Territory</option>
                                <option>Gombe</option>
                                <option>Imo</option>
                                <option>Jigawa</option>
                                <option>Kaduna</option>
                                <option>Kano</option>
                                <option>Katsina</option>
                                <option>Kebbi</option>
                                <option>Kogi</option>
                                <option>Kwara</option>
                                <option>Lagos</option>
                                <option>Nasarawa</option>
                                <option>Niger</option>
                                <option>Ogun</option>
                                <option>Ondo</option>
                                <option>Osun</option>
                                <option>Oyo</option>
                                <option>Plateau</option>
                                <option>Rivers</option>
                                <option>Sokoto</option>
                                <option>Taraba</option>
                                <option>Yobe</option>
                                <option>Zamfara</option>
                            </select>
                        </div>
                        <div>
                            <div class="col-md-4">
                                <label class="text6">Address</label><br>
                                <input type="text" class="form-control form-text" name="address"
                                    value="<%= user.address %>">
                            </div>
                            <div class="col-md-4">
                                <label class="text6">Contact Name</label><br>
                                <input type="text" class="form-control form-text" name="contact_name"
                                    value="<%= user.contact_name %> ">
                            </div>
                            <div class="col-md-4">
                                <label class="text6">Contact Phone</label><br>
                                <input type="text" class="form-control form-text" name="contact_phone"
                                    value="<%= user.contact_phone %> ">
                            </div>
                            <div class="col-md-4">
                                <label class="text6">Contact Email</label><br>
                                <input type="text" class="form-control form-text" name="contact_email"
                                    value="<%= user.contact_email %> ">
                            </div>
                            <div class="col-md-4">
                                <label class="text6">Registration Number</label><br>
                                <input type="text" class="form-control form-text" name="reg_number"
                                    value="<%= user.reg_number %> ">
                            </div>
                        </div>
                        <div class="container"></div>
                        <div style="padding:0 15px">
                            <label style="padding:15px 0 0" class="text6">More About Your Organisation</label><br>
                            <textarea class="form-control form-text" name="description"
                                cols="10"><%= user.description %></textarea>
                        </div>
                        <div>
                            <input class="profile-btn" type="submit" value="SAVE">
                        </div>
