<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="../stylesheets/login-signup.css">
</head>
<%- include('../partials/meta-data') %>

<body>
    <%- include('../partials/nav') %>
    <div>
        <img src="../images/logo.png" class="logo-login">
    </div>
    <div class="col-md-12" id="volunteer-signup-part">
        <%- messages("message", locals) %>
        <% if (errors) { %>
        <% errors.forEach(error => { %>
        <center>
            <div style="width: 80%;" class="alert alert-danger text-center"><%= error.msg %></div>
        </center>
        <% }) %>
        <% } %>
        <div class="col-md-6">
            <img src="../images/volunteer-login.png" class="ngo-signup-image signup-image">
        </div>
        <div class="col-md-6">
            <div class="card-view">
                <h1 class="text-center text1">Join MyHelper.ng as a Volunteer</h1>
                <p class="text-center text2">Fill the form below to join as a Volunteer</p>
                <form method="POST" action="/join/volunteer">
                    <input class="input-group" name="name" type="text" placeholder="Full Name">
                    <input class="input-group" name="email" type="text" placeholder="Email">
                    <input class="input-group" name="contact" type="text" placeholder="Phone Number">
                    <select class="input-group" name="state" placeholder="State">
                        <option>State</option>
                        <option>Lagos</option>
                        <option>Kano</option>
                        <option>Sokoto</option>
                    </select>
                    <input class="input-group" name="password" type="password" placeholder="Password" required>
                    <input class="input-group" name="password2" type="password" placeholder="Confirm Password" required>
                    <input class="signup-btn" type="submit" value="Join">
                    <p class="text-center text4 text4a"><a href="/login/volunteer">Already joined? If yes, login</a></p>
                </form>
            </div>
        </div>
    </div>
    <div class="container"></div>
    <%- include('../partials/footer') %>
</body>